@{
    ViewBag.Title = "Add Contact";
}

<h2>Add Contact</h2>

<div class="form-horizontal">
    <hr />
    <div class="main-error-div text-danger">
        <div class="error-msg">

        </div>
        <a class="close-error-block">
            Close
        </a>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">First Name</label>
        <div class="col-md-10">
            <input type="text" id="firstname" placeholder="Enter First Name" class="form-control" /><span class="required">*</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Last Name</label>
        <div class="col-md-10">
            <input type="text" id="lastname" placeholder="Enter Last Name" class="form-control" /><span class="required">*</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input type="text" id="email" placeholder="Enter Email" class="form-control" /><span class="required">*</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Phone Number</label>
        <div class="col-md-10">
            <input type="text" id="phonenumber" placeholder="Enter 10 digit Phone Number" class="form-control" /><span class="required">*</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Status</label>
        <div class="col-md-10">
            <select id="status">
                <option value="Active">Active</option>
                <option value="InActive">In Active</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Add Contact" id="add-contact" class="btn btn-default" />
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
